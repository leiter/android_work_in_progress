<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:textColorPrimary">@color/primaryColorText</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="AppTheme.NoToolbar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="ActionbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">#53542e</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="NavigationTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Light.SearchResult.Title
        </item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="AppButtonStyle" parent="Base.TextAppearance.AppCompat.Button">

    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="AppEditTextRow" parent="Base.Widget.AppCompat.EditText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_states</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColor">#330022</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="AppButtonStyleMost" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:textColor">#77330022</item>
        <item name="android:background">@drawable/my_button</item>

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="AppQuizHorizontalButtonStyle" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:textColor">#77330022</item>
    </style>


</resources>
